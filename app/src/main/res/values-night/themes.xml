<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Task" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/bg_border_box_gray</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="hintTextColor">@color/selector_text_input_layout_hint_color</item>
    </style>

    <style name="MyTextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/frutiger_roman</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_border_box_gray</item>
        <item name="android:fontFamily">@font/frutiger_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>